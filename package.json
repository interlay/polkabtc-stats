        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "lodash": "^4.17.20",
        "pg": "^8.5.1",
        "pg-format": "^1.0.4",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.1.6",
        "tsoa": "^3.4.0",
