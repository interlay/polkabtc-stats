{
    "name": "@interlay/polkabtc-stats",
    "version": "0.3.1",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
        "build": "tsoa spec-and-routes && tsc",
        "build:client": "openapi-generator-cli generate -i build/swagger.json -g typescript-axios -o client",
        "compile:client": "tsc -d client/*.ts --outdir dist",
        "client": "yarn build:client && yarn compile:client",
        "start": "node -r dotenv/config build/src/server.js",
        "test": "PGDATABASE=\"polkabtc_standalone\" PGUSER=\"user\" PGPASSWORD=\"password\" mocha test/**/*.test.ts --timeout 60000"
    },
    "dependencies": {
        "@interlay/polkabtc": "0.15.5",
        "@interlay/polkabtc-types": "0.7.2",
        "@supercharge/promise-pool": "^1.6.0",
        "@types/big.js": "^6.0.2",
        "@types/pg-format": "^1.0.1",
        "big.js": "^6.0.3",
        "bitcoinjs-lib": "^5.2.0",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-pino-logger": "^6.0.0",
        "lodash": "^4.17.20",
        "pg": "^8.5.1",
        "pg-format": "^1.0.4",
        "pg-native": "^3.0.0",
        "pino": "^6.11.1",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^4.1.6",
        "tsoa": "^3.4.0",
        "typeorm": "^0.2.30"
    },
    "devDependencies": {
        "@openapitools/openapi-generator-cli": "^2.1.17",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.17",
        "@types/express": "^4.17.11",
        "@types/express-pino-logger": "^4.0.2",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.14.20",
        "@types/pg": "^7.14.8",
        "@types/pino": "^6.3.6",
        "@types/swagger-ui-express": "^4.1.2",
        "axios": "^0.21.1",
        "chai": "^4.3.4",
        "concurrently": "^5.3.0",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.7",
        "pino-pretty": "^4.6.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4
    },
    "mocha": {
        "reporter": "spec",
        "require": "ts-node/register",
        "recursive": true
    }
